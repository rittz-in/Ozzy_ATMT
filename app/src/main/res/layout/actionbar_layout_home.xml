    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionbarLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:fitsSystemWindows="true"
    android:minHeight="?android:attr/actionBarSize"
    android:maxHeight="?android:attr/actionBarSize"
    app:theme="@style/AppThemeColor">

    <!--  android:background="@drawable/img_top_nav"
  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            app:tint="@color/colorWhite"
            android:src="@drawable/img_icon_home"
            android:id="@+id/imgHomeIcon"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:paddingLeft="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_toRightOf="@id/imgHomeIcon"
            android:layout_centerVertical="true"/>

